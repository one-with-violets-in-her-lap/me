---
import { ChevronsRightIcon } from 'lucide-react'

interface Props {
    /** Title of a navigation link tile. It's hidden if some custom content is passed through a default slot */
    title?: string
    href?: string
    additionalClass?: string
}

const { title, additionalClass, href } = Astro.props

const TileElement = href ? 'a' : 'div'
---

<TileElement
    {href}
    class={`navigation-panel-tile px-5.5 py-3 opacity-0 rounded-md bg-foreground/1 h-26 border border-accent flex items-center transition-all duration-200 gap-x-3 hover:scale-105 hover:border-accent/40 hover:bg-foreground/3 max-xl:gap-x-0 max-xl:py-1 max-xl:h-13 max-xl:px-2 ${additionalClass || ''}`}
>
    <slot>
        <ChevronsRightIcon
            className="text-muted size-20 max-xl:size-10 shrink-0"
            strokeWidth={1.3}
        />

        <span class="text-3xl font-normal max-xl:text-2xl">{title}</span>
    </slot>
</TileElement>
