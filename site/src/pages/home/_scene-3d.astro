<canvas
    id="canvas"
    class="absolute h-screen w-1/2 top-0 right-0 pointer-events-none max-lg:w-4xl max-sm:w-lg max-sm:-top-10"
></canvas>

<script>
    import { Crow3dScene } from '@/lib/3d/crow-scene'

    const canvas = document.querySelector('#canvas') as HTMLCanvasElement

    const crowScene = new Crow3dScene(canvas)
    crowScene
        .initialize()
        .then(() => console.log('Crow 3d scene was initialized'))
        .catch(console.error)
</script>
