---
import type { DevProject } from '@/lib/content/types'

interface Props {
    project: DevProject
}

const { project } = Astro.props
---

<li class="bg-background/60 border border-foreground/10 rounded-lg px-6 py-7">
    <header class="flex items-center gap-x-5 mb-4">
        <img
            src={project.logo.asset.url + '?auto=format&w=60&h=60'}
            class="size-11 object-cover object-center rounded-sm"
        />

        <h3 class="scroll-m-20 text-2xl font-normal tracking-tight">
            {project.name}
        </h3>
    </header>

    <p class="mb-6">
        {project.description}
    </p>

    <ul class="flex items-center gap-3 max-w-xl flex-wrap">
         {
            project.technologiesUsed.map(technology => (
                <li class="text-sm py-1 px-2 bg-muted/50 rounded-lg">{technology}</li>
            ))
        }
    </ul>
</li>
