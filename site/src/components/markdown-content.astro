---
import { marked } from 'marked'

interface Props {
    markdown: string
}

const htmlContent = await marked(Astro.props.markdown)
---

<div
    class="prose dark:prose-invert prose-neutral markdown-content"
    set:html={htmlContent}
/>

<style is:global>
    @layer base {
        .markdown-content img {
            max-height: var(--container-xs);
            border-radius: var(--radius-lg);
            box-shadow: 0px 0px 30px 1px var(--color-black/70);
        }
    }
</style>
