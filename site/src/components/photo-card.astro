---
import type { Photo } from '@/lib/content'

interface Props {
    photo: Photo
}

const { photo } = Astro.props
---

<div
    class="not-first:mt-8 bg-background relative rounded-xl overflow-hidden shadow-[0px_0px_50px_0px] shadow-foreground/30 max-w-xl"
>
    <img
        class="aspect-video object-cover w-full"
        alt={photo.imageAlternativeText ?? photo.name ?? photo.description}
        src={photo.image.asset.url + '?auto=format&w=1000&h=1000'}
    />

    <div
        class="absolute top-0 left-0 w-0.5 h-full bg-foreground/60 backdrop-blur-[100px]"
    >
    </div>
    <div
        class="absolute top-0 right-0 w-0.5 h-full bg-foreground/60 backdrop-blur-[100px]"
    >
    </div>

    <div
        class="absolute bottom-0 left-0 w-full h-0.5 bg-foreground/60 backdrop-blur-[100px]"
    >
    </div>
    <div
        class="absolute top-0 left-0 w-full h-0.5 bg-foreground/60 backdrop-blur-[100px]"
    >
    </div>
</div>
